{% extends 'base.html.twig' %}

{% block title %}{{lesson.title}}{% endblock %}

{% block body %}

    <h1 class="pt-3"><center>{{ lesson.title }}<center></h1>

    <div class="container pt-4 pb-4"> {{lesson.content|raw}}

    <table>
            <tr>
                <th>Cree le : </th>
                <td>{{ lesson.createdAt ? lesson.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifie le : </th>
                <td>{{ lesson.updatedAt ? lesson.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Cree par : </th>
                <td>{{ lesson.user }}</td>
            </tr>
    </table>
    </div>

<div class="espacecomment" style="background: #2C3E50">
    <div class="container">
      <div class="text-white">
        <h3 class="text-white pt-4"> Commentaires </h3>
     {{ include('comment/_form.html.twig') }}
       </div>
    </div>

     <div class="box">
     {% for comment in comments %}
        <div class="card border-secondary mb-3" style="max-width: 20rem;">
            <div class="card-header">{{comment.title}}</div>
            <div class="card-body">
                <p class="card-text">{{comment.content|striptags}}</p>
    </div>
</div>
     {% endfor  %}


</div>

    <a href="{{ path('lesson_index') }}">Retouner a la liste</a>

    {% if app.user == lesson.user %}
        <a href="{{ path('lesson_edit', {'id': lesson.id}) }}">editer</a>
        {{ include('lesson/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
